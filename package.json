{
  "name": "genesis",
  "displayName": "Genesis",
  "description": "Genesis is a robust Visual Studio Code extension powered by OpenAI. It provides advanced AI capabilities right in your code editor, including code explanations, refactorings, and programming language translations. Genesis is multilingual and adapts its responses to the language selected in your settings. Remember, powerful AI assistance is just a right-click away with Genesis!",
  "icon": "genesis_icon.png",
  "keywords": ["AI", "code generation", "code refactoring", "OpenAI", "ChatGPT", "natural language processing", "NLP"],
  "version": "0.0.1",
  "publisher": "GiovanniCocco",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages", "Data Science", "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
          "command": "extension.chatgpt.activateAI",
          "key": "ctrl+shift+a",
          "mac": "cmd+shift+a",
          "when": "editorTextFocus"
      }
  ],
    "configuration": {
      "title": "Genesis",
      "properties": {
          "extension.openAIKey": {
              "type": "string",
              "default": "",
              "description": "Your OpenAI API Key"
          },
          "extension.model": {
              "type": "string",
              "enum": ["gpt-3.5-turbo", "gpt-4"],
              "default": "gpt-3.5-turbo",
              "description": "The OpenAI model to use for responses"
          },
          "extension.alwaysAskModel": {
            "type": "boolean",
            "default": false,
            "description": "Always ask which model to use"
        },        
          "extension.language": {
            "type": "string",
            "enum": ["English", "Spanish", "French", "German", "Italian", "Portuguese"],
            "default": "English",
            "description": "The language for the ChatGPT responses"
        }
      }
},
    "commands": [
      {
        "command": "extension.chatgpt.activateAI",
        "title": "Activate AI"
      },
      {
        "command": "genesis.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.chatgpt.explainFile",
        "title": "ChatGPT explain this file"
      },
      {
        "command": "extension.chatgpt.explainSelection",
        "title": "ChatGPT explain this"
      },
      {
        "command": "extension.chatgpt.refactorFile",
        "title": "ChatGPT refactor this file"
      },
      {
        "command": "extension.chatgpt.refactorSelection",
        "title": "ChatGPT refactor this"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.chatgpt.explainFile",
          "group": "navigation"
        },
        {
          "command": "extension.chatgpt.refactorFile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "extension.chatgpt.explainSelection",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "extension.chatgpt.refactorSelection",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giovannicocco/genesis.git"
  }
}
